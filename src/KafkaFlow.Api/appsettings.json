{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning"
      }
    }
  },
  "Kafka": {
    "Brokers": [
      "localhost:7030"
    ],
    "Consumers": [
      {
        "Name": "example-consumer",
        "TopicName": "example-topic",
        "ConsumerConfig": {
          "GroupId": "example-consumer-group",
          "AutoOffsetReset": 1,
          "EnableAutoCommit": false,
          "EnableAutoOffsetStore": false,
          "MessageMaxBytes": 15728640
        }
      }
    ]
  }
}